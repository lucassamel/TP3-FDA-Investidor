<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Pergunta4Fragment">

    <TextView
        android:id="@+id/textViewPergunta4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4. Considerando seus rendimentos regulares, qual a porcentagem você  pretende reservar para aplicações financeiras?"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPergunta4">

        <RadioButton
            android:id="@+id/radioButtonP4R1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No máximo 25% " />

        <RadioButton
            android:id="@+id/radioButtonP4R2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entre 25,01 e 50% " />

        <RadioButton
            android:id="@+id/radioButtonP4R3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acima de 50%" />
    </RadioGroup>

    <Button
        android:id="@+id/btnPergunta5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />
</androidx.constraintlayout.widget.ConstraintLayout>